---
interface Props {
  image?: string;
  title: string;
  pubDate: Date;
}

const { image, title, pubDate } = Astro.props;
---

<div
  class="divide-y divide-gray-900 overflow-hidden rounded-lg bg-gray-700 shadow-sm"
>
  <div class="px-4 py-5 sm:px-6">
    <div class="flex items-end justify-between">
      <h3 class="text-lg md:text-2xl text-gray-300 truncate">{title}</h3>
      <p class="text-md text-primary text-nowrap ml-4">
        {
          pubDate.toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
          })
        }
      </p>
    </div>
    <div class="pt-2 sm:pt-4">
      <img src={image ? image : "/blog-placeholder-about.jpg"} alt={title} />
    </div>
  </div>
</div>
