---
import Layout from "layouts/Layout.astro";
---

<Layout title="404" description="Page not found">
  <main class="grid min-h-full place-items-center px-6 py-24 sm:py-32 lg:px-8">
    <div class="text-center">
      <p class="text-2xl font-semibold text-primary">404</p>
      <h1
        class="mt-4 text-balance text-5xl font-semibold tracking-tight text-gray-300 sm:text-7xl"
      >
        Page not found
      </h1>
      <p
        class="mt-6 text-pretty text-lg font-medium text-gray-400 sm:text-xl/8"
      >
        Sorry, we couldn’t find the page you’re looking for.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="/"
          class="rounded-md bg-primary px-3.5 py-2.5 text-sm font-semibold text-gray-200 shadow-sm hover:bg-secondary focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary"
          >Go back home</a
        >
        <a href="/contact" class="text-sm font-semibold text-gray-300"
          >Contact support <span aria-hidden="true">&rarr;</span></a
        >
      </div>
    </div>
  </main>
</Layout>
